<ul class="errors"></ul>
<div class='edit-profile-container group'>
  <div class='edit-profile-header group'>
    <img src='<%= profile.escape("profile_pic") %>' class='profile-pic'>
    <form class='profile-pic'>
      <input type="file" name="profile[profile_pic]" id="input-image">
      <button class='profile-pic-submit'>Upload Profile Pic</button>
    </form>
    <div class='edit-profile-user-info'>
      <h1><%= user.username %></h1>
      <h2><%= 2015 - user.year %> * <%= user.country %>, <%= user.zip_code %> * <%= user.gender %></h2>
    </div>

    <% if(profile.user().id != OKCupid.CurrentUser.id) { %>
      <% if (profile.alreadyLiked()) { %>
        <button class='like'>Unlike!</button>
      <% } else { %>
        <button class='like'>Like!</button>
      <% } %>
    <% } %>
  </div>

  <div class='edit-profile-info-section'>
    <label for='profile_self'>My self-summary<br>
      <textarea id='profile_self'
             name='profile[self_summary]'><%= profile.escape('self_summary')%></textarea><br>
    </label><br>

    <label for='profile_doing'>What I'm doing with my life<br>
      <textarea id='profile_doing'
             name='profile[what_im_doing]'><%= profile.escape('what_im_doing')%></textarea><br>
    </label><br>

    <label for='profile_really_good_at'>I'm really good at<br>
      <textarea id='profile_really_good_at'
             name='profile[im_really_good_at]'><%= profile.escape('im_really_good_at')%></textarea><br>
    </label><br>

    <label for='profile_favorites'>Favorite books, movies, shows, music, and food<br>
      <textarea id='profile_favorites'
             name='profile[favorites]'><%= profile.escape('favorites')%></textarea><br>
    </label><br>

    <label for='profile_six_things'>The six things I could never do without<br>
      <textarea id='profile_six_things'
             name='profile[six_things]'><%= profile.escape('six_things')%></textarea><br>
    </label><br>

    <label for='profile_thinking'>I spend a lot of time thinking about<br>
      <textarea id='profile_thinking'
             name='profile[thinking_about]'><%= profile.escape('thinking_about')%></textarea><br>
    </label><br>

    <label for='profile_friday_night'>On a typical Friday night I am<br>
      <textarea id='profile_friday_night'
             name='profile[friday_night]'><%= profile.escape('friday_night')%></textarea><br>
    </label><br>

    <label for='profile_message_me_if'>You should message me if<br>
      <textarea id='profile_message_me_if'
             name='profile[message_me_if]'><%= profile.escape('message_me_if')%></textarea><br>
    </label><br>
  </div>

  <div class='edit-profile-stats-section'>
    <h1>My Details</h1>

    <div class='profile-info-item group'>
      <label for='profile_orientation'>Orientation<br>
        <input id='profile_orientation'
               type='text'
               name='profile[orientation]'
               value='<%= profile.escape('orientation')%>'><br>
      </label><br>
    </div>

    <div class='profile-info-item group'>
