<div class='question-show-container'>
  <br>
  <h1><%= question.escape('title') %></h1>
  <br>

  <h1>Choices:</h1>
  <radiogroup class='choices'></radiogroup>
  <br>
  <h1>Importance:</h1>
  <radiogroup class='importance'>
    <input type='radio' name='question_answer[importance]' value='0'>Not Important</input><br>
    <input type='radio' name='question_answer[importance]' value='1'>Somewhat Important</input><br>
    <input type='radio' name='question_answer[importance]' value='2'>Important</input><br>
    <input type='radio' name='question_answer[importance]' value='3'>Mandatory</input><br>
  </radiogroup>
  <br>
  <input type="submit"><br><br>

  <h1><a href="#/questions/">Back To Questions</a></h1>
  <br>
</div>
